<?xml version="1.0" encoding="UTF-8" ?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<HBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" fx:controller="afterwind.lab1.controller.SectionController">
    <children>
        <BorderPane>
            <padding>
                <Insets top="15" right="15" left="15" bottom="15"/>
            </padding>
            <top>
                <HBox alignment="CENTER">
                    <children>
                        <Label text="Sections Management">
                            <font>
                                <Font size="20"/>
                            </font>
                            <padding> <Insets top="10" right="0" left="0" bottom="20"/> </padding>
                        </Label>
                    </children>
                </HBox>
            </top>
            <center>
                <AnchorPane>
                    <children>
                        <HBox>
                            <children>
                                <VBox spacing="5">
                                    <children>
                                        <TableView fx:id="tableView">
                                            <columns>
                                                <TableColumn fx:id="idColumn" text="ID"/>
                                                <TableColumn fx:id="nameColumn" text="Name" minWidth="150"/>
                                                <TableColumn fx:id="nrLocColumn" text="NrLoc" minWidth="60"/>
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                            </columnResizePolicy>
                                        </TableView>
                                        <HBox alignment="CENTER" spacing="5" AnchorPane.bottomAnchor="10">
                                            <children>
                                                <Button fx:id="buttonDelete" text="Delete" minWidth="80" onAction="#handleDelete"/>
                                                <Button fx:id="buttonRefresh" text="Refresh" minWidth="80" onAction="#handleRefresh"/>
                                                <Button fx:id="buttonSave" text="Save" minWidth="80" onAction="#handleSave"/>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                                <VBox spacing="5" AnchorPane.rightAnchor="20">
                                    <children>
                                        <GridPane hgap="5" vgap="5">
                                            <padding>
                                                <Insets top="20" right="0" left="20" bottom="0"/>
                                            </padding>
                                            <children>
                                                <Label text="Name: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                                <Label text="Numar Locuri: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                                <TextField fx:id="nameTextField" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-border-color:lightgray; -fx-border-width: 1; -fx-border-style: solid;"/>
                                                <TextField fx:id="nrLocTextField" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-border-color:lightgray; -fx-border-width: 1; -fx-border-style: solid;"/>
                                            </children>
                                        </GridPane>
                                        <HBox spacing="5" alignment="CENTER" AnchorPane.bottomAnchor="10">
                                            <padding>
                                                <Insets top="20" right="0" bottom="0" left="0"/>
                                            </padding>
                                            <children>
                                                <Button fx:id="buttonAdd" text="Add" minWidth="80" onAction="#handleAdd"/>
                                                <Button fx:id="buttonUpdate" text="Update" minWidth="80" onAction="#handleUpdate"/>
                                                <Button fx:id="buttonClear" text="Clear" minWidth="80" onAction="#handleClear"/>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </AnchorPane>
            </center>
        </BorderPane>
    </children>
</HBox>
<?xml version="1.0" encoding="UTF-8" ?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Border?>
<?import java.lang.String?>
<?import javafx.scene.shape.Rectangle?>
<fx:root type="javafx.scene.layout.VBox" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" fx:controller="afterwind.lab1.controller.CandidateController">
    <fx:define>
        <String fx:id="BORDER_LIGHTGRAY"
                fx:value="-fx-border-color:lightgray; -fx-border-width: 1; -fx-border-style: solid;"/>
    </fx:define>

    <children>
        <HBox alignment="CENTER" spacing="5">
            <Label text="Candidates Management">
                <font>
                    <Font size="20"/>
                </font>
                <padding>
                    <Insets top="10" right="0" bottom="20" left="0"/>
                </padding>
            </Label>
        </HBox>
        <VBox alignment="CENTER" spacing="5">
            <children>
                <VBox alignment="CENTER" spacing="10">
                    <padding>
                        <Insets top="0" right="20" bottom="0" left="20"/>
                    </padding>
                    <children>
                        <TableView fx:id="tableView" maxWidth="537">
                            <columns>
                                <TableColumn fx:id="columnID" text="ID" minWidth="35"/>
                                <TableColumn fx:id="columnName" text="Name" minWidth="150"/>
                                <TableColumn fx:id="columnTel" text="Telephone" minWidth="150"/>
                                <TableColumn fx:id="columnAddress" text="Address" minWidth="200"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="UNCONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                        <HBox alignment="CENTER" spacing="5">
                            <children>
                                <Button text="Delete" minWidth="80" onAction="#handleDelete"/>
                                <Button text="Refresh" minWidth="80" onAction="#handleRefresh"/>
                                <Button text="Save" minWidth="80" onAction="#handleSave"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <HBox alignment="CENTER" spacing="15">
                    <children>
                        <VBox spacing="10">
                            <children>
                                <GridPane hgap="5" vgap="5">
                                    <padding>
                                        <Insets top="20" right="0" bottom="0" left="20"/>
                                    </padding>
                                    <children>
                                        <Label text="Name: " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                        <Label text="Address: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                        <Label text="Telephone: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                        <TextField fx:id="nameTextField" style="$BORDER_LIGHTGRAY" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                                        <TextField fx:id="addressTextField" style="$BORDER_LIGHTGRAY" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                        <TextField fx:id="telTextField" style="$BORDER_LIGHTGRAY" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                    </children>
                                </GridPane>
                                <HBox alignment="CENTER" spacing="5">
                                    <children>
                                        <Button text="Add" minWidth="80" onAction="#handleAdd"/>
                                        <Button text="Update" minWidth="80" onAction="#handleUpdate"/>
                                        <Button text="Clear" minWidth="80" onAction="#handleClear"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <VBox spacing="10">
                            <children>
                                <GridPane hgap="5" vgap="5">
                                    <padding>
                                        <Insets top="20" right="0" bottom="0" left="20"/>
                                    </padding>
                                    <children>
                                        <Label text="Name: " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                        <Label text="Address: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                        <Label text="Telephone: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                        <TextField fx:id="nameFilterTextField" style="$BORDER_LIGHTGRAY" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                                        <TextField fx:id="addressFilterTextField" style="$BORDER_LIGHTGRAY" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                        <TextField fx:id="telFilterTextField" style="$BORDER_LIGHTGRAY" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                        <Button text="Filter" minWidth="80" onAction="#handleNameFilter" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                                        <Button text="Filter" minWidth="80" onAction="#handleAddressFilter" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                                        <Button text="Filter" minWidth="80" onAction="#handleTelFilter" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                                        <Button fx:id="clearFilterButton" text="Clear" minWidth="80" onAction="#handleClearFilter" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                                        <Button text="FilterAll" minWidth="80" onAction="#handleFilter" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                                    </children>
                                </GridPane>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</fx:root>